{% extends '::base.html.twig' %}

{% block body %}
    <h1>Un cours d'une heure pour 1 euro</h1>
    <br>
    <div class="row">
        <!--step 1 status -->
        <div class="col-md-6">
            <h3>Nous recherchons un prof :</h3><br><br>
            {% set classe2 = '' %}
            {% for course in courses %}
                {% if classe2 != course.classe %}
                    {% set classe2 = course.classe %}
                    <h2>{{ classe2 }}</h2>
                {% endif %}
                {% if course.prof == NULL %}
                    <a href="{{ path('zephyr_cours_addprof', {id:course.id}) }}" data-id="{{ course.id }}">
                        Cours n°{{course.id}} : {{course.unit}} le {{ course.date|date("d/m/Y à h:i") }} - SANS PROF
                    </a>
                {% endif %}
                <br>
            {% endfor %}
        </div>
        <div class="col-md-6">
            <h3>Il manque des élèves :</h3><br><br> 
            {% set classe = '' %}
            {% for course in courses %}
                {% if classe != course.classe %}
                    {% set classe = course.classe %}
                    <h2>{{ classe }}</h2>
                {% endif %}
                {% if course.prof != NULL %}
                    <a href="{{ path('zephyr_cours_addstudent', {id:course.id}) }}" data-id="{{ course.id }}">
                        Cours n°{{course.id}} : {{course.unit}} le {{ course.date|date("d/m/Y à h:i") }} - PROF : {{course.prof}} 
                    </a>
                {% else %}
                    <a href="{{ path('zephyr_cours_addstudent', {id:course.id}) }}" data-id="{{ course.id }}">
                        Cours n°{{course.id}} : {{course.unit}} le {{ course.date|date("d/m/Y à h:i") }} - SANS PROF
                    </a>
                {% endif %}
                <br>
            {% endfor %}
        </div>
        <div class="col-md-12">
            <br><br>
            <h3>Vous n'avez pas trouvé votre bonheur ?</h3><br>
            <a class="btn btn-lg btn-danger" href="{{ path('zephyr_cours_homepage') }}" role="button">Demander un cours</a>
        </div>
    </div>
{% endblock %}